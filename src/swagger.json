{
  "openapi": "3.0.3",
  "info": {
    "title": "API BlackBelt IT",
    "description": "API BlackBelt IT",
    "version": "1.0.0"
  },
  "paths": {
    "/roles": {
      "get": {
        "summary": "List all roles",
        "tags": ["Role"],
        "description": "Returns all the roles",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "summary": "Criar uma nova role",
        "tags": ["Role"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role created."
          },
          "400": {
            "description": "Role already exists."
          }
        }
      }
    }
  }
}
